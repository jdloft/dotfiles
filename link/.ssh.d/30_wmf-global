# WMF global settings
# vim: syntax=sshconfig

# Internal -> External
Host *.eqiad.wmflabs !bastion*
    ProxyCommand ssh -a -W %h:%p bastion.wmflabs.org

# Internal
Host *.wmflabs
    User negative24
    IdentityFile ~/.ssh/id_rsa
    IdentitiesOnly yes

# External
Host *.wmflabs.org
    User negative24
    IdentityFile ~/.ssh/id_rsa
    IdentitiesOnly yes

