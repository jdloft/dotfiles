Host bastion.wmflabs.org
    IdentitiesOnly yes
    ForwardAgent yes

Host bastion2.wmflabs.org
    IdentitiesOnly yes
    ForwardAgent yes

Host bastion-01.eqiad.wmflabs
    Hostname bastion.wmflabs.org
    ProxyCommand none

Host bastion-02.eqiad.wmflabs
    Hostname bastion2.wmflabs.org
    ProxyCommand none

# Tool labs
Host tools-bastion-01.tools.eqiad.wmflabs
    Hostname login.tools.wmflabs.org
    ProxyCommand none

# Internal -> External
Host *.eqiad.wmflabs
    ProxyCommand ssh -a -W %h:%p bastion-01.eqiad.wmflabs

# Internal
Host *.wmflabs
    User negative24
    IdentityFile ~/.ssh/id_rsa
    IdentitiesOnly yes

# External
Host *.wmflabs.org
    User negative24
    IdentityFile ~/.ssh/id_rsa
    IdentitiesOnly yes

# Shortcuts
Host tools
    Hostname login.tools.wmflabs.org

Host phab-02
    Hostname phab-02.eqiad.wmflabs
    Port 222

Host phab-01
    Hostname phab-01.eqiad.wmflabs

